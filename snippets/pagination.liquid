{% if pagination.pages > 0 %}
    {% if pagination.previous %}
        <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1" href="{{ pagination.previous.url }}"> {{ pagination.previous.title }} </a>
    {% endif %}

    {% for part in pagination.parts %}
        {% if part.is_link %}
            <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-3 py-3">{{ part.title }}</a>
        {% endif %} 
    {% endfor %}

    {% if pagination.next %}
        <a class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3" href="{{ pagination.next.url }}"> {{ pagination.next.title }} </a>
    {% endif %}
    
{% endif %}