<div class="max-w-screen-lg mx-auto py-10">
  <h2 class="text-4xl font-bold text-center mb-6">{{ section.settings.heading_title }}</h2>

  <div class="contact-form">
    {% form 'contact' %}
      {% if form.errors %}
        <ul class="mb-3">
          {% for error in form.errors %}
            <li>
              {% if error == 'form' %}
                {{ form.errors.messages[error] }}
              {% else %}
                {{ form.errors.translated_fields[error] }} - {{ form.errors.messages[error] }}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if form.posted_successfully? %}
        <div class="successfully-msg flex items-center mb-3">
          {% render 'icon-success' %}
          <span class="ms-2 inline-block">Message Sent Successfully.</span>
        </div>
      {% endif %}

      <div class="max-w-6xl mx-auto justify-center items-center flex-1 px-4">
        <div class="flex px-1 mb-3 gap-x-3">
          <div class="full-name md:w-1/2">
            <label for="full_name" class="text-base pb-2">Full Name</label>
            <input class="border w-full py-3 px-4 rounded" type="text" id="full_name" name="contact[full_name]">
          </div>
          <div class="Email md:w-1/2">
            <label class="text-base pb-2" for="email">Email</label>
            <input class="border w-full py-3 px-4 rounded" type="email" id="email" name="contact[email]">
          </div>
        </div>

        <div class="w-full px-1 mb-3">
          <div class="message w-full">
            <label class="text-base pb-2" for="message">Message</label>
            <textarea class="w-full text-gray-500 px-4 border py-3" id="message" name="contact[body]"></textarea>
          </div>
        </div>

        <div class="w-full px-1 mb-3">
          <div class="submit-btn w-full">
            <input
              type="submit"
              value="Submit"
              class="bg-gray-700 hover:bg-white text-white hover:text-gray-800 uppercase px-8 py-3 border transition duration-300"
            >
          </div>
        </div>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Contact us",
  "tag": "div",
  "class": "contact-us",
  "settings": [
    {
      "type": "text",
      "id": "heading_title",
      "default": "Contact us",
      "label": "Heading title"
    }
  ],
  "presets": [
    {
      "name": "Contact us"
    }
  ]
}
{% endschema %}
