
<div class="content text-center">
    {% for block in section.blocks%}
        {% case block.type %}
            {% when "article_title" %}
            <h1 class="text-center text-5xl mb-3">{{ article.title }}</h1>
                
            {% when "featured_image" %}
            <img class="text-center mx-auto mb-3 block" src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}" width="" height="">

            {% when "article_auther" %}
            {% if section.settings.enable_author %}
                <p> {{ article.author }} </p>
            {% endif %}

            {% when "article_publish_date" %}
            {% if section.settings.enable_publish_date %}
                <time class="mb-4 inline-block" datetime="{{ article.published_at | date: '%d-%m-%y' }}">{{ article.published_at | date: '%d-%m-%y' }}</time>
            {% endif %}

            {% when "article_content" %}
            <p>{{ article.content }}</p>
                
            {% else %}
            third_expression
        {% endcase %}
    {% endfor %}
</div>


{% schema %}
    {
        "name": "Template Article",
        "tag": "div",
        "class": "article-template-container",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "label": "Display Author",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "enable_publish_date",
                "label": "Display Publish Date",
                "default": true
            }
        ],
        "blocks": [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_auther",
                "name": "Auther",
                "limit": 1
            },
            {
                "type": "article_publish_date",
                "name": "Article Publish Date",
                "limit": 1
            },
            {
                "type": "featured_image",
                "name": "Featured Image",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }
        ]
    }
{% endschema %}